<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:background="@drawable/bg_suggestion"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/popup.variable"
        android:gravity="center"
        android:text="v"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignBottom="@id/txt_header"
        android:text="@string/save"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txt_header"
        android:layout_toLeftOf="@+id/txt_type"
        android:gravity="center|start"
        android:paddingLeft="2dp"
        android:textColor="?android:textColorPrimary" />

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/txt_name"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center|end"
        android:text="" />

</RelativeLayout>