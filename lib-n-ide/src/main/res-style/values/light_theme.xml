<resources>
    <color name="light_color_accent">#FF5722</color>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#004d40</item>
        <item name="colorPrimary">#00897b</item>
        <item name="colorAccent">@color/light_color_accent</item>

        <item name="actionBarStyle">@style/Light.Toolbar</item>
